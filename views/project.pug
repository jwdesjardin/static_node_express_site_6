extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

  
        h1= `${project.project_name}`

    
        p.lead.text-light
          | #{project.description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        ul
          each li of project.technologies
            li= `${li}`
         


        a.button.expanded(href=`${project.live_link}`, target='_blank') Live Demo
        a.button.expanded(href=`${project.github_link}`, target='_blank') GitHub Repo
    
 
    img.imge(src=`https://127.0.0.1/static/images/proj_${project.id + 1}_landscape_1.png`)
    img.imge(src=`https://127.0.0.1:3000/static/images/proj_${project.id + 1}_landscape_2.png`)
    img.imge(src=`https://127.0.0.1:3000/static/images/proj_${project.id + 1}_landscape_3.png`)
    