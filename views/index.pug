extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div


      h1 Hello, my next Employer.


      p.lead.text-light
        | This is a static web application made with node.js and express. This shows off my 5 previous projects completed as part of the FullStack Javescript TechDegree program at Team Treehouse.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

     
      each project in projects
        .cell.project-cell
          a(href=`https://127.0.0.1:3000/project/${project.id}`)
            img.thumbnail(src=`https://127.0.0.1:3000/static${project.image_urls[0]}`)
            h5= `${project.project_name}`
      
    
      
